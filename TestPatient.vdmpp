class TestPatient

operations
    private assertTrue: bool ==> ()
        assertTrue(cond) == return
    pre cond;
		
    private createPatient: () ==> ()
    createPatient() ==
    (
        dcl patient1 : Patient := new Patient("Pacient", <Male>, 23, <Serious>, <Stroke>);
    
        -- Asserts
        assertTrue( patient1.name  = "Pacient" );
        assertTrue( patient1.gender  = <Male> );
        assertTrue( patient1.age  = 23 );
        assertTrue( patient1.injury_status = <Serious> );
    );

    public static main: () ==> ()
    main() ==
    (
        new TestPatient().createPatient();
    );

end TestPatient